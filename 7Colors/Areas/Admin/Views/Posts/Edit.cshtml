@model _7Colors.Models.Post

@{
    ViewData["Title"] = "تعديل الموضوع";
}
<div class="d-flex" id="wrapper">
    <!-- /#sidebar-wrapper -->
    <partial name="_Navbar" />
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h4 class="text-info">@ViewData["Title"]</h4>
            <form asp-action="Edit" method="post">
                <div class="p-4 rounded border row">
                    <div asp-validation="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-lg-8">
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-lg-8">
                            <textarea asp-for="Description" class="form-control" cols="40" rows="5"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3 imgL">
                            الصور :
                      </div>
                        <div class="col-lg-8">
                            <ul>
                                @foreach (var i in Model.Images)
                                {
                                    <li>
                                       @*  <input type="checkbox" name="img" value="@i.Id" /> *@
                                        <a asp-controller="Images" asp-action="Details" asp-route-id="@i.Id"> 
                                            @i.Title 
                                            <div><img src="@i.Url" /></div>
                                        </a>                                       
                                    </li>
                                }
                            </ul>
                        </div>
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Created"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Created" class="form-control" readonly value="@Model.Created.Date" type="text">
                        </div>
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn" value="التعديل" />
                        <a asp-action="Index" class="btn">العودة للقائمة</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

