@model _7Colors.Models.HPGroup

@{
    ViewData["Title"] = "تفاصيل مجموعة";
}
<div class="d-flex" id="wrapper">
    <partial name="_Navbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        @*   <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        <a class="btn btn-warning float-right" asp-area="Admin" asp-controller="Products" asp-action="Create">Add-Product</a>
        </nav> *@
        <div class="container-fluid">
            <h4 class="text-info">@ViewData["Title"]</h4>
            <form asp-action="Details" method="post">
                <div class="p-4 rounded border row">
                    <div asp-validation="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-6">
                            <label asp-for="Title" class="form-control" />@Model.Title
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-6">
                            <label asp-for="Description" class="form-control" />@Model.Description
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn">التعديل</a>
                        <a asp-action="Index" class="btn">العودة للقائمة</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
