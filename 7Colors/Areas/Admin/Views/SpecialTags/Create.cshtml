@model _7Colors.Models.SpecialTag

@{
    ViewData["Title"] = "إضافة علامة جديدة";
}
<div class="d-flex" id="wrapper">
    <partial name="_Navbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
        <div class="container-fluid">
            <h4 class="text-info">@ViewData["Title"]</h4>
            <form asp-action="Create" method="post">
            <div class="p4 rounded border row">
                    <div asp-validation="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn" value="حفظ" />
                        <a asp-action="Index" class="btn">العودة للقائمة  </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
