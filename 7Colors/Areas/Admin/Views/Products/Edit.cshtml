@model _7Colors.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "تعديل المنتج ";
}

<div class="d-flex" id="wrapper">
    <partial name="_Navbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h4 class="text-info">@ViewData["Title"] </h4>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="p-4 rounded border row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h4>@ViewBag.message</h4>
                    <input type="hidden" asp-for="Product!.Id" />
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Product!.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.Price"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Product!.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.Image"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.Image" class="form-control" type="file" />
                        </div>
                        <span asp-validation-for="Product!.Image" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.ProductColor"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.ProductColor" class="form-control" />
                        </div>
                        <span asp-validation-for="Product!.ProductColor" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.TypeId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="Product!.TypeId" asp-items="@Model.ProductTypeList" class="form-control"><option disabled selected>--اختر نوع المنتج--</option></select>
                        </div>
                        <span asp-validation-for="Product!.TypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.TagId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="Product!.TagId" asp-items="@ViewBag.TagId" class="form-control"><option disabled selected>--اختر العلامة الخاصة--</option></select>
                        </div>
                        <span asp-validation-for="Product!.TagId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.IsAvailable"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.IsAvailable" type="checkbox" />
                        </div>
                        <span asp-validation-for="Product!.IsAvailable" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Product!.IsPublished"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Product!.IsPublished" type="checkbox" />
                        </div>
                        <span asp-validation-for="Product!.IsPublished" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <input class="btn" type="submit" value="تعديل"/>
                        <a asp-action="Index" class="btn">عودة للقائمة</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}