@using _7Colors.Utility
@model IEnumerable<_7Colors.Models.Product>

@{
    ViewData["Title"] = "قائمة المنتجات";
}

<div class="d-flex" id="wrapper">
    <partial name="_Navbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        @* <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        <a class="btn btn-warning float-right" asp-area="Admin" asp-controller="Products" asp-action="Create">Add-Product</a>
        </nav> *@
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <h4 class="text-info">@ViewData["Title"]</h4>
                </div>
                <div class="col-lg-6">
                    <a asp-action="Create" class="btn"><i class="fa fa-plus"></i>&nbsp; إضافة</a>
                </div>
            </div>
            <form method="post">
                <div class="row">
                    <div class="col-lg-3">
                        <input type="number" class="form-control" name="lowAmount" placeholder="00.00" />
                    </div>
                    <div class="col-lg-3">
                        <input type="number" class="form-control" name="largeAmount" placeholder="99.99 " />
                    </div>
                    <div class="col-lg-3">
                        <input type="submit" class="btn" value="بحث" />
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </form>
            <br />
            <div>
                <table class="table table-striped border" id="myTable">
                    <thead>
                        <tr class="table-info">
                            <th>@Html.DisplayNameFor(c => c.Name)</th>
                            <th>@Html.DisplayNameFor(c => c.Price)</th>
                            <th>@Html.DisplayNameFor(c=>c.Image)</th>
                            <th>@Html.DisplayNameFor(c => c.ProductColor) </th>
                            <th>@Html.DisplayNameFor(c => c.IsAvailable)</th>
                            <th>@Html.DisplayNameFor(c => c.IsPublished)</th>
                            <th>@Html.DisplayNameFor(c => c.TypeId)</th>
                            <th>@Html.DisplayNameFor(c => c.TagId)</th>
                            @* <th width ="0px"></th> *@
                            <th width="140px">خيارات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString().ConvertNumerals() رس</td>
                                <td id="img" style="background-color: @((item.Image != null) ? 
                                "var(--bs-table-bg)" : "darksalmon")">
                                    <img src="@item.Image" /></td>
                                <td>@item.ProductColor</td>
                                <td style="background-color: @(item.IsAvailable? "var(--bs-table-bg)" : "darksalmon")">
                                    @item.IsAvailable.ConvertLogic()</td>                               
                                <td>@item.IsPublished.ConvertLogic()</td>
                                <td>@item.ProductType?.Type</td>
                                <td>@item.SpecialTag?.Name</td>
                                <partial name="_Buttons" model="@item.Id" />
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /#wrapper -->
</div>

@section scripts{
    <script>
       $(function () {
            var create = '@TempData["create"]';
            if (create != "") {
                alertify.success(create);
            }
            var edit = '@TempData["edit"]';
            if (edit != "") {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]';
            if (del != "") {
                alertify.error(del);
            }
        });
    </script>
}