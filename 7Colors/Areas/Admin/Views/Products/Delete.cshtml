@model _7Colors.Models.Product
@{
    ViewData["Title"] = "حذف المنتج";
}

<div class="d-flex" id="wrapper">
    <partial name="_Navbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        @* <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            <a class="btn btn-warning float-right" asp-area="Admin" asp-controller="Products" asp-action="Create">Add-Product</a>
        </nav> *@
        <div class="container-fluid">
            <h4 class="text-info">@ViewData["Title"]</h4>
            <form asp-action="Delete" method="post" enctype="multipart/form-data">
                <div class="p-4r">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">                           
                            <label asp-for="Name" class="form-control" />@Model.Name
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Price"></label>
                        </div>
                        <div class="col-8">
                            <label asp-for="Price" class="form-control" />@Model.Price
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="ProductColor"></label>
                        </div>
                        <div class="col-8">
                            <label asp-for="ProductColor" class="form-control" />@Model.ProductColor
                        </div>
                        <span asp-validation-for="ProductColor" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="TypeId"></label>
                        </div>
                        <div class="col-8">
                            <label asp-for="TypeId" class="form-control" />@Model.ProductType!.Type
                        </div>
                        <span asp-validation-for="TypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="TagId"></label>
                        </div>
                        <div class="col-8">
                            <label asp-for="TagId" class="form-control" /> @Model.SpecialTag!.Name
                        </div>
                        <span asp-validation-for="TagId" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="IsAvailable"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IsAvailable" disabled="disabled" type="checkbox" />
                        </div>
                        <span asp-validation-for="IsAvailable" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="IsPublished"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IsPublished" type="checkbox" disabled="disabled" />
                        </div>
                        <span asp-validation-for="IsPublished" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group row">
                        <a type="button" asp-action="Delete" asp-route-id="@Model.Id" class="btn">حذف</a>
                        <a asp-action="Index" class="btn">عودة للقائمة</a>
                    </div>                   
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}