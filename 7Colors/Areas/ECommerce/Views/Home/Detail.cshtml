@using System.Globalization
@model _7Colors.Models.ShoppingCartLine

@{
    ViewData["Title"] = "تفاصيل المنتج";
}
<br />
<div class="container">
    <h2 class="text-info">@ViewData["Title"]</h2>
    <form asp-action="Detail" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-7">

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Product!.Name"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Product!.Name" class="form-control" />@Model.Product!.Name
                    </div>
                    <span asp-validation-for="Product!.Name" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Product!.Price"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Product!.Price" class="form-control" />
                        @Model.Product!.Price.ToString("c", new CultureInfo("ar-SA"))
                    </div>
                    <span asp-validation-for="Product!.Price" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Product!.ProductColor"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Product!.ProductColor" class="form-control" /> @Model.Product!.ProductColor
                    </div>
                    <span asp-validation-for="Product!.ProductColor" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Product!.TypeId"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Product!.TypeId" class="form-control" />@Model.Product!.ProductType!.Type
                    </div>
                    <span asp-validation-for="Product!.TypeId" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Count"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Count" class="form-control" /> @Model.Count
                    </div>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    @if (Model.Product!.IsAvailable)
                    {
                        <div class="col-md-4">
                            <label class="avaL" asp-for="Product!.IsAvailable"></label>
                            <img src="~/images/instock.png" class="in" />
                         </div>
                        <div class="col-md-8">
                            <input type="submit" class="btn" value="إضافة إلى العربة" />
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            <label class="avaL" asp-for="Product!.IsAvailable"></label>
                            <img src="~/images/notinstock.png" class="out" />
                            </div>
                        <div class="col-md-8">
                            <input type="submit" class="btn" value="إضافة إلى العربة" disabled />
                        </div>
                    }                    
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn" title="رجوع للخلف">عودة للقائمة</a>
                </div>
            </div>
            <div class="col-md-3 base">
                <img src="@Model.Product!.Image" class="card-img" id="Detail" />
            </div>
        </div>
    </form>
</div>
@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}