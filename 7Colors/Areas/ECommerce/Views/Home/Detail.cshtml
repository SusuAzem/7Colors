@model _7Colors.Models.Product

@{
    ViewData["Title"] = "تفاصيل المنتج";

}

<br />
<div class="container">
    <h2 class="text-info">@ViewData["Title"]</h2>
    <form asp-action="AddToCart" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Name" class="form-control" />@Model.Name
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="Price" class="form-control" />@Model.Price
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="ProductColor"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="ProductColor" class="form-control" /> @Model.ProductColor
                    </div>
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="TypeId"></label>
                    </div>
                    <div class="col-md-8">
                        <label asp-for="TypeId" class="form-control" />@Model.ProductType!.Type
                    </div>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    @if (Model.IsAvailable)
                    {
                        <div class="col-md-4">
                            <img src="~/images/instock.png" class="in" />
                         </div>
                        <div class="col-md-8">
                            <input type="submit" class="btn" value="إضافة إلى العربة" />
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            <img src="~/images/notinstock.png" class="out" />
                            </div>
                        <div class="col-md-8">
                            <input type="submit" class="btn" value="إضافة إلى العربة" disabled />
                        </div>
                    }                    
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn">عودة للقائمة</a>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <img src="@Model.Image" class="card-img" id="Detail" />                
            </div>
        </div>
    </form>
</div>
@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}